# Production Environment Configuration
# Use this file for production deployments with docker-compose.prod.yml

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres_production_password_change_this
DB_DATABASE=karhubty
DB_HOST=postgres
DB_PORT=5432

# Backend Configuration - Production
NODE_ENV=production
JWT_SECRET=your_very_secure_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=24h
PORT=8080

# Email Configuration (Brevo)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
BREVO_EMAIL=your-brevo-email@example.com
BREVO_SMTP_KEY=your_brevo_smtp_key_here
EMAIL_FROM=noreply@karhubty.com
EMAIL_PROVIDER=brevo

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Application Settings
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:3000
