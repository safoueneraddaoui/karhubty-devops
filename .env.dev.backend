# Database Configuration
# Inside Docker: use service name 'postgres' instead of localhost
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=karhubty
DB_DATABASE=karhubty

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d

# Application
PORT=8080
NODE_ENV=development

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
# For Development: Use MailHog (docker-compose)
# Inside Docker: use service name 'mailhog' instead of localhost
EMAIL_PROVIDER=mailhog
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@karhubty.com

# For Production: Use Brevo
# Set EMAIL_PROVIDER=brevo and update the credentials below
# EMAIL_HOST=smtp-relay.brevo.com
# EMAIL_PORT=587
# EMAIL_USER=your-brevo-email@example.com
# EMAIL_PASSWORD=your-brevo-smtp-key

# Frontend URL for email links
FRONTEND_URL=http://localhost:3000